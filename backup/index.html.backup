<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sheep Beans Games</title>
    <link rel="icon" type="image/png" href="images/icon-numfusion.png">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            min-height: 100vh;
            color: #fff;
        }

        header {
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(0,0,0,0.3);
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 30px;
        }

        .logo {
            display: inline-block;
        }

        .logo img {
            height: 50px;
            vertical-align: middle;
        }

        nav {
            display: flex;
            gap: 10px;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 20px;
            transition: background 0.3s;
        }

        nav a:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        .lang-switch {
            display: flex;
            gap: 5px;
        }

        .lang-btn {
            background: rgba(255,255,255,0.1);
            border: 1px solid rgba(255,255,255,0.2);
            color: #fff;
            padding: 6px 12px;
            border-radius: 15px;
            cursor: pointer;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

        .lang-btn:hover {
            background: rgba(255,255,255,0.2);
        }

        .lang-btn.active {
            background: #4ecca3;
            border-color: #4ecca3;
        }

        .hero {
            text-align: center;
            padding: 60px 20px;
        }

        .hero-logo {
            max-width: 200px;
            margin-bottom: 20px;
        }

        .hero h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #fff;
        }

        .hero p {
            font-size: 1.2rem;
            color: #ccc;
            max-width: 600px;
            margin: 0 auto;
        }

        .games-section {
            padding: 60px 20px;
            text-align: center;
        }

        .games-section h2 {
            font-size: 2rem;
            margin-bottom: 40px;
            color: #fff;
        }

        .game-card {
            background: rgba(255,255,255,0.1);
            border-radius: 20px;
            padding: 30px;
            max-width: 350px;
            margin: 0 auto;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .game-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .game-icon {
            width: 120px;
            height: 120px;
            border-radius: 24px;
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

        .game-logo {
            max-width: 250px;
            margin-bottom: 15px;
        }

        .game-card p {
            color: #aaa;
            font-size: 1rem;
            margin-bottom: 20px;
        }

        .coming-soon {
            display: inline-block;
            background: rgba(255,255,255,0.2);
            color: #fff;
            padding: 12px 24px;
            border-radius: 10px;
            font-weight: 600;
        }

        footer {
            text-align: center;
            padding: 30px;
            background: rgba(0,0,0,0.3);
            margin-top: 60px;
        }

        footer a {
            color: #4ecca3;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

        .footer-links {
            margin-bottom: 15px;
        }

        .footer-links a {
            margin: 0 15px;
        }

        .footer-logo {
            height: 40px;
            margin-bottom: 15px;
            opacity: 0.8;
        }

        @media (max-width: 768px) {
            header {
                flex-direction: column;
                gap: 15px;
            }

            .header-left {
                flex-direction: column;
                gap: 15px;
            }

            .hero h1 {
                font-size: 1.8rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="header-left">
            <div class="logo">
                <img src="images/logo-sheepbeans.png" alt="Sheep Beans Games">
            </div>
            <nav>
                <a href="index.html" data-i18n="nav.home">首頁</a>
                <a href="privacy.html" data-i18n="nav.privacy">隱私權政策</a>
            </nav>
        </div>
        <div class="lang-switch">
            <button class="lang-btn active" data-lang="zh">中文</button>
            <button class="lang-btn" data-lang="en">EN</button>
        </div>
    </header>

    <section class="hero">
        <img src="images/logo-sheepbeans.png" alt="Sheep Beans Games" class="hero-logo">
        <h1 data-i18n="hero.title">歡迎來到 Sheep Beans Games</h1>
        <p data-i18n="hero.desc">我們致力於開發有趣且創新的手機遊戲，帶給玩家最佳的遊戲體驗。</p>
    </section>

    <section class="games-section">
        <h2 data-i18n="games.title">我們的遊戲</h2>
        <div class="game-card">
            <img src="images/icon-numfusion.png" alt="NumFusion" class="game-icon">
            <img src="images/logo-numfusion.png" alt="NumFusion" class="game-logo">
            <p data-i18n="games.numfusion.desc">一款結合數字與策略的益智遊戲</p>
            <span class="coming-soon" data-i18n="games.coming">即將上線</span>
        </div>
    </section>

    <footer>
        <img src="images/logo-sheepbeans.png" alt="Sheep Beans Games" class="footer-logo">
        <div class="footer-links">
            <a href="privacy.html" data-i18n="nav.privacy">隱私權政策</a>
            <a href="mailto:sheepbeansgames@gmail.com" data-i18n="footer.contact">聯絡我們</a>
        </div>
        <p>&copy; 2025 Sheep Beans Games. All rights reserved.</p>
    </footer>

    <script>
        const i18n = {
            zh: {
                'nav.home': '首頁',
                'nav.privacy': '隱私權政策',
                'hero.title': '歡迎來到 Sheep Beans Games',
                'hero.desc': '我們致力於開發有趣且創新的手機遊戲，帶給玩家最佳的遊戲體驗。',
                'games.title': '我們的遊戲',
                'games.numfusion.desc': '一款結合數字與策略的益智遊戲',
                'games.coming': '即將上線',
                'footer.contact': '聯絡我們'
            },
            en: {
                'nav.home': 'Home',
                'nav.privacy': 'Privacy Policy',
                'hero.title': 'Welcome to Sheep Beans Games',
                'hero.desc': 'We are dedicated to creating fun and innovative mobile games for the best gaming experience.',
                'games.title': 'Our Games',
                'games.numfusion.desc': 'A puzzle game combining numbers and strategy',
                'games.coming': 'Coming Soon',
                'footer.contact': 'Contact Us'
            }
        };

        function setLanguage(lang) {
            document.querySelectorAll('[data-i18n]').forEach(el => {
                const key = el.getAttribute('data-i18n');
                if (i18n[lang][key]) {
                    el.textContent = i18n[lang][key];
                }
            });

            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.classList.toggle('active', btn.getAttribute('data-lang') === lang);
            });

            document.documentElement.lang = lang === 'zh' ? 'zh-TW' : 'en';
            localStorage.setItem('lang', lang);
        }

        document.querySelectorAll('.lang-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                setLanguage(btn.getAttribute('data-lang'));
            });
        });

        // Load saved language or default to zh
        const savedLang = localStorage.getItem('lang') || 'zh';
        setLanguage(savedLang);
    </script>
</body>
</html>
